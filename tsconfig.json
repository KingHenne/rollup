{
    "compilerOptions": {
        "pretty": true,
        "target": "es5",
        "diagnostics": true,
        "lib": ["es5", "es6", "dom"],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": [
        "typings/**/*.d.ts",
        "src",
        "bin",
        "browser"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
